<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewRecordActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp"
        android:textSize="@dimen/activityTitle"
        android:text="Enter new record data"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Enter blood pressure"
        android:backgroundTint="@color/colorAccent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Enter new respiratory rate"
        android:backgroundTint="@color/colorAccent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Enter blood oxygen level"
        android:backgroundTint="@color/colorAccent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:hint="Enter heart beat rate"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/authenticate_button"
        android:layout_width="250dp"
        android:layout_height="54dp"
        android:text="Add Record"
        android:textSize="18sp"
        android:theme="@style/AppTheme.Button"
        android:layout_marginTop="32dp"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>